<%= link_to "Retour", :action => :index %>
<br /><br />
<h3>Posts</h3>
<% if @posts && @posts.count > 0%>
  <% @posts.each do |p| %>
    <%= link_to p.title, {:action => :post, :id => p.id}%> - <%= link_to "Supprimer", {:action => :delete_post, :id => p.id} %><br />
  <% end %>
<% end %>
<br />
<%= render :partial => 'posts/pages', :locals => {:page => @page, :pages => @pages, :route => "/admin/posts"} %>
