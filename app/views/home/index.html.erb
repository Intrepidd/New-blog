<% if @posts && @posts.count > 0 %>
  <% @posts.each do |p| %>
    <%= render :partial => 'posts/post', :locals => {:post => p} %>
  <% end %>
<% else %>
  Pas d'articles pour le moment.
<% end %>
<br />
<%= render :partial => 'posts/pages', :locals => {:page => @page, :pages => @pages, :route => "/posts"} %>
